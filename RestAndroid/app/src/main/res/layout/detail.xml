<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffccd0"
    >
    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="63dp"
            >
            <!-- ***************************Info perso******************************* -->
            <LinearLayout
                android:id="@+id/infoPerso"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/titreInfo"
                    android:text="Informations personnel"
                    android:textColor="#b3000d"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="26dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#ffb0b6"
                    android:layout_marginBottom="5dip"
                    android:typeface="sans"/>

                <ListView
                    android:id="@+id/lv_infos"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:cacheColorHint="#00000000">
                </ListView>

            </LinearLayout>
            <!-- ************************Competence******************************** -->
            <LinearLayout
                android:id="@+id/competence"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/titreCompetence"
                    android:text="Competences"
                    android:textColor="#b3000d"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="26dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#ffb0b6"
                    android:layout_marginBottom="5dip"
                    android:typeface="sans"/>

                <ListView
                    android:id="@+id/lv_competence"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:cacheColorHint="#00000000">
                </ListView>
            </LinearLayout>

        <!-- ************************experience_pro******************************** -->
        <LinearLayout
            android:id="@+id/experience_pro"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TextView
                android:id="@+id/titreExp"
                android:text="Experiences Pro"
                android:textColor="#b3000d"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="26dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="#ffb0b6"
                android:layout_marginBottom="5dip"
                android:typeface="sans"/>

            <ListView
                android:id="@+id/lv_experience"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:cacheColorHint="#00000000">
            </ListView>
        </LinearLayout>

            <!-- ************************formation******************************** -->
            <LinearLayout
                android:id="@+id/formation"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/titreFormation"
                    android:text="Formations"
                    android:textColor="#b3000d"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="26dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#ffb0b6"
                    android:layout_marginBottom="5dip"
                    android:typeface="sans"/>

                <ListView
                    android:id="@+id/lv_formation"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:cacheColorHint="#00000000">
                </ListView>
            </LinearLayout>

            <!-- ************************langue******************************** -->
            <LinearLayout
                android:id="@+id/langue"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/titreLangue"
                    android:text="Langues"
                    android:textColor="#b3000d"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="26dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#ffb0b6"
                    android:layout_marginBottom="5dip"
                    android:typeface="sans"/>

                <ListView
                    android:id="@+id/lv_langue"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:cacheColorHint="#00000000">
                </ListView>
            </LinearLayout>

            <!-- ************************Loisirs******************************** -->
            <LinearLayout
                android:id="@+id/loisir"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/titreLoisir"
                    android:text="Loisirs"
                    android:textColor="#b3000d"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="26dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#ffb0b6"
                    android:layout_marginBottom="5dip"
                    android:typeface="sans"/>

                <ListView
                    android:id="@+id/lv_loisir"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:cacheColorHint="#00000000">
                </ListView>
            </LinearLayout>

            <!-- ************************projet******************************** -->
            <LinearLayout
                android:id="@+id/projet"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/titreProjet"
                    android:text="Projets"
                    android:textColor="#b3000d"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="26dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#ffb0b6"
                    android:layout_marginBottom="5dip"
                    android:typeface="sans"/>

                <ListView
                    android:id="@+id/lv_Projet"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:cacheColorHint="#00000000">
                </ListView>
            </LinearLayout>

    </FrameLayout>




    </TabHost>
</LinearLayout>