<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffccd0"
    >
    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="63dp"
            >
            <!-- ***************************Info perso******************************* -->
            <LinearLayout
                android:id="@+id/infoPerso"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/titreInfo"
                    android:text="Informations personnel"
                    android:textColor="#b3000d"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="26dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#ffb0b6"
                    android:layout_marginBottom="5dip"
                    android:typeface="sans"/>

                <EditText
                    android:id="@+id/titre"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:inputType="textPersonName"
                    android:hint="@string/titre"
                    android:layout_width="fill_parent">
                </EditText>

                <EditText
                    android:id="@+id/nom"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:inputType="textPersonName"
                    android:hint="@string/nom"
                    android:layout_width="fill_parent">
                </EditText>

                <EditText
                    android:id="@+id/prenom"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:inputType="textPersonName"
                    android:hint="@string/prenom"
                    android:layout_width="fill_parent">
                </EditText>

                <EditText
                    android:id="@+id/adresse"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:inputType="textPersonName"
                    android:hint="@string/adresse"
                    android:layout_width="fill_parent">
                </EditText>

                <EditText
                    android:id="@+id/tele"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:inputType="textPersonName"
                    android:hint="@string/tele"
                    android:layout_width="fill_parent">
                </EditText>

            </LinearLayout>
            <!-- ************************Competence******************************** -->
            <LinearLayout
                android:id="@+id/competence"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

                <LinearLayout
                    android:id="@+id/Competence1"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/c1"
                        android:text="Competence 1"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/titre1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/titre"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/description1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/description"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Competence2"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/c2"
                        android:text="Competence 2"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/titre2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/titre"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/description2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/description"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <!-- ************************experience_pro******************************** -->
            <LinearLayout
                android:id="@+id/experience_pro"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <LinearLayout
                    android:id="@+id/experience1"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/exp1"
                        android:text="Experience pro 1"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/date1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/date"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/expr1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/experience"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/experience2"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/exp2"
                        android:text="Experience pro 2"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/date2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/titre"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/expr2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/description"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>


            </LinearLayout>

            <!-- ************************formation******************************** -->
            <LinearLayout
                android:id="@+id/formation"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <LinearLayout
                    android:id="@+id/formation1"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/fr1"
                        android:text="Formation 1"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/datefr1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/date"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/diplome1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/diplome"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/formation2"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/fr2"
                        android:text="Formation 2"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/datefr2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/date"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/diplome2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/diplome"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <!-- ************************langue******************************** -->
            <LinearLayout
                android:id="@+id/langue"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <LinearLayout
                    android:id="@+id/langue1"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/lg1"
                        android:text="Longue 1"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/nom1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/nom"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/niveau1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/niveau"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/langue2"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/lg2"
                        android:text="Longue 1"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/nom2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/nom"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/niveau2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/niveau"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>

            </LinearLayout>

            <!-- ************************Loisirs******************************** -->
            <LinearLayout
                android:id="@+id/loisir"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

                    <TextView
                        android:id="@+id/lz"
                        android:text="Loisirs"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/lz1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/loisir"
                        android:layout_width="fill_parent">
                    </EditText>
                <EditText
                    android:id="@+id/lz2"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:inputType="textPersonName"
                    android:hint="@string/loisir"
                    android:layout_width="fill_parent">
                </EditText>

                <Button
                    android:id="@+id/valide"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:text="Enregistrer"
                    android:layout_width="fill_parent">
                </Button>
            </LinearLayout>

            <!-- ************************projet******************************** -->
            <LinearLayout
                android:id="@+id/projet"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <LinearLayout
                    android:id="@+id/projet1"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/pr1"
                        android:text="Projet 1"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/datep1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/date"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/sujetp1"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/sujet"
                        android:layout_width="fill_parent">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/projet2"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/pr2"
                        android:text="Projet 2"
                        android:textColor="#b3000d"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="26dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#ffb0b6"
                        android:layout_marginBottom="5dip"
                        android:typeface="sans"/>
                    <EditText
                        android:id="@+id/datep2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/date"
                        android:layout_width="fill_parent">
                    </EditText>
                    <EditText
                        android:id="@+id/sujetp2"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:inputType="textPersonName"
                        android:hint="@string/sujet"
                        android:layout_width="fill_parent">
                    </EditText>


                </LinearLayout>
            </LinearLayout>

        </FrameLayout>




    </TabHost>
</LinearLayout>